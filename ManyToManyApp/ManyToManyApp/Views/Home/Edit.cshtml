@model ManyToManyApp.Models.Student
@using ManyToManyApp.Models

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    <h4>Student</h4>

    @Html.HiddenFor(model => model.Id)

    <div class="editor-label"><b>Name</b></div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
    </div>

    <div class="editor-label"><b>Surname</b></div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Surname)
    </div>

    <div class="editor-label"><b>Course</b></div>
    foreach (Course c in ViewBag.Courses)
    {
        <input type="checkbox" name="selectedCourses" value="@c.Id"
            @(Model.Courses.Contains(c) ? "checked=\"checked\"" : "") />@c.Name<br />
    }
    <p>
        <input type="submit" value="save" />
    </p>
}

